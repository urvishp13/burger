<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers that you have not eaten.</h2>
      <ul>
        {{#each burgers}}
        {{!-- unless = if false --}}
          {{#unless devoured}}
            {{> burgers/burger-block eat=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <h2>Burgers that you have eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block eat=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>      

<div class="form">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>
